GENERIC_OBJS = \
		 ../generic/genericprovider_bmp.o\
		 ../generic/genericprovider_gif.o\
		 ../generic/genericprovider_ico.o\
		 ../generic/genericprovider_jpg.o\
		 ../generic/genericprovider_pcx.o\
		 ../generic/genericprovider_png.o\
		 ../generic/genericprovider_ppm.o\
		 ../generic/genericprovider_tga.o\
		 ../generic/genericprovider_xbm.o\
		 ../generic/genericprovider_xpm.o\

CCFLAGS 	+= \
     -Ijgui/binds \
	   `pkg-config --cflags cairo` \

LDFLAGS		+= \
	   `pkg-config --libs cairo` \

REQUIRES	+= \
		 cairo \

# choose the graphic engine

ifeq ($(ENABLE_GRAPHICS),sdl2)
	CCFLAGS 	+= \
		 `pkg-config --cflags sdl2` \

	LDFLAGS		+= \
		 `pkg-config --libs sdl2` \
		 -ljpeg \

	DEFINES		+= \
		 -DSDL2_UI \

	REQUIRES	+= \
		 sdl2 \

	OBJS_gfx	+= \
		 $(GENERIC_OBJS)\
		 sdl2application.o\

	OBJS_jgui	= $(addprefix binds/$(ENABLE_GRAPHICS)/,$(OBJS_gfx))

endif

ifeq ($(ENABLE_GRAPHICS),sfml2)
	CCFLAGS 	+= \

	LDFLAGS		+= \
     `pkg-config --libs alsa` \
		 -lsfml-graphics -lsfml-window -lsfml-system -lsfml-audio \
     -ljpeg \

	DEFINES		+= \
		 -DSFML2_UI \

	REQUIRES	+= \

	OBJS_gfx	+= \
		 $(GENERIC_OBJS)\
		 sfml2application.o\

	OBJS_jgui	= $(addprefix binds/$(ENABLE_GRAPHICS)/,$(OBJS_gfx))

endif

ifeq ($(ENABLE_GRAPHICS),x11)
	CCFLAGS 	+= \

	LDFLAGS		+= \
     `pkg-config --libs x11 alsa` \
     -ljpeg \

	DEFINES		+= \
		 -DX11_UI \

	REQUIRES	+= \

	OBJS_gfx	+= \
		 $(GENERIC_OBJS)\
		 x11application.o\

	OBJS_jgui	= $(addprefix binds/$(ENABLE_GRAPHICS)/,$(OBJS_gfx))

endif

ifeq ($(ENABLE_GRAPHICS),gtk3)
	CCFLAGS 	+= \
		 `pkg-config --cflags gtk+-3.0` \

	LDFLAGS		+= \
		 `pkg-config --libs gtk+-3.0 alsa` \
		 -ljpeg \

	DEFINES		+= \
		 -DGTK3_UI \

	REQUIRES	+= \

	OBJS_gfx	+= \
		 $(GENERIC_OBJS)\
		 gtk3application.o\

	OBJS_jgui	= $(addprefix binds/$(ENABLE_GRAPHICS)/,$(OBJS_gfx))

endif

ifeq ($(ENABLE_GRAPHICS),allegro5)
	CCFLAGS 	+= \
		 `pkg-config --cflags allegro-5 allegro_video-5 allegro_main-5` \

	LDFLAGS		+= \
		 `pkg-config --libs allegro-5 allegro_video-5 allegro_main-5 alsa` \
		 -ljpeg \

	DEFINES		+= \
		 -DALLEGRO5_UI \

	REQUIRES	+= \

	OBJS_gfx	+= \
		 $(GENERIC_OBJS)\
		 allegro5application.o\

	OBJS_jgui	= $(addprefix binds/$(ENABLE_GRAPHICS)/,$(OBJS_gfx))

endif

