OBJS	= $(OBJS_jcommon) $(OBJS_jmpeg) $(OBJS_jio) $(OBJS_jlogger) $(OBJS_jshared) $(OBJS_jsocket) $(OBJS_jthread) $(OBJS_jgui)
SRCS	= $(SRCS_jcommon) $(SRCS_jmpeg) $(SRCS_jio) $(SRCS_jlogger) $(SRCS_jshared) $(SRCS_jsocket) $(SRCS_jthread) $(SRCS_jgui)

$(EXE): $(SRCS)
	@rm -rf lib
	@mkdir lib
	@$(AR) -rc ./lib/$(EXE) $(SRCS) 
	@echo Linking $(EXE) ...  $(OK)

.cpp.o: $<
	@$(CPP) $(CXXFLAGS) -c $< -o $@ && echo Compiling $< ...  $(OK)

strip:
	@echo -e "Strip $(EXE)...  $(OK)"
	@$(STRIP) $(LIBDIR)/$(EXE)

tests:
	@cd $(TESTDIR) && make && cd .. &&  echo -e "Compiling $< ...  $(OK)" 

doc:
	@mkdir -p $(DOCDIR) 

install:
	@cp $(LIBDIR)/$(EXE) c:/windows/system32

uninstall:
	@rm c:/windows/system32/$(EXE)

clean: clean-custom
	@rm -rf *.o *~ lib/$(EXE) jcommon/*.o jio/*.o jlogger/*.o jmpeg/*.o jshared/*.o jsocket/*.o jthread/*.o jgui/*.o
	@echo $(MODULE) clean $(OK)

ultraclean: clean
	@rm -rf lib/$(EXE) $(BINDIR) $(LIBDIR)
	@echo $(MODULE) ultraclean $(OK)

